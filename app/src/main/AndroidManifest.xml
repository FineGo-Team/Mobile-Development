<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_finego"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_finego_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyFirebaseAuth">
        <activity
            android:name="com.dicoding.finego.features.form.PengeluaranActivity"
            android:exported="false" />
        <activity
            android:name="com.dicoding.finego.features.form.PemasukanActivity"
            android:exported="false" />
        <activity
            android:name="com.dicoding.finego.features.form.FormActivity"
            android:exported="false" />
        <activity
            android:name="com.dicoding.finego.auth.register.RegisterActivity"
            android:exported="false" />
        <activity
            android:name="com.dicoding.finego.features.profile.ProfileActivity"
            android:exported="false" />
        <activity
            android:name="com.dicoding.finego.auth.login.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.dicoding.finego.main.MainActivity"
            android:exported="true" />
    </application>

</manifest>